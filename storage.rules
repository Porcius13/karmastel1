rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Allow public read for profile pictures and collection covers
    // Paths: collection-covers/{userId}/...
    match /collection-covers/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Rules for other uploads (if any) can be added here
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
