rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // USERS:
    // Allow public read to facilitate username->email lookup and discovery
    match /users/{userId} {
      allow read: if true; 
      allow write: if request.auth != null && request.auth.uid == userId;

      match /followers/{followerId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == followerId;
      }

      match /following/{targetId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      match /notifications/{notificationId} {
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null;
      }

      match /saved_collections/{docId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Helper: checks if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // PRODUCT & COLLECTION ACCESS RULES
    // 1. Public items: readable by everyone
    // 2. Owner items: readable by owner
    // 3. Shared items: readable by participants
    function canAccessData(data) {
      return data.get('isPublic', false) == true || 
             (isAuthenticated() && (
               data.get('userId', '') == request.auth.uid || 
               request.auth.uid in data.get('participants', [])
             ));
    }

    // COLLECTION SETTINGS:
    match /collection_settings/{settingsId} {
      allow read: if resource.data.get('isPublic', false) == true || isAuthenticated();
      allow create: if isAuthenticated() && request.resource.data.get('userId', '') == request.auth.uid;
      allow update: if isAuthenticated() && (
                      resource.data.get('userId', '') == request.auth.uid || 
                      request.auth.uid in resource.data.get('participants', [])
                    );
      allow delete: if isAuthenticated() && resource.data.get('userId', '') == request.auth.uid;

      match /likes/{userId} {
        allow read: if true;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // PRODUCTS:
    match /products/{productId} {
      allow read: if canAccessData(resource.data);
      allow create: if isAuthenticated() && request.resource.data.get('userId', '') == request.auth.uid;
      allow update: if isAuthenticated() && (
                      resource.data.get('userId', '') == request.auth.uid || 
                      request.auth.uid in resource.data.get('participants', [])
                    );
      allow delete: if isAuthenticated() && resource.data.get('userId', '') == request.auth.uid;

      // Price History
      match /priceHistory/{historyId} {
        allow read: if canAccessData(get(/databases/$(database)/documents/products/$(productId)).data);
        allow write: if isAuthenticated() && (
                        get(/databases/$(database)/documents/products/$(productId)).data.get('userId', '') == request.auth.uid || 
                        request.auth.uid in get(/databases/$(database)/documents/products/$(productId)).data.get('participants', [])
                      );
      }
    }

    // FAILED PRODUCTS:
    match /failed_products/{productId} {
      allow read, write: if isAuthenticated() && (resource.data.get('userId', '') == request.auth.uid || request.resource.data.get('userId', '') == request.auth.uid);
    }

    // CHATS & MESSAGES:
    match /chats/{chatId} {
      allow read: if isAuthenticated() && request.auth.uid in resource.data.get('participants', []);
      allow update: if isAuthenticated() && request.auth.uid in resource.data.get('participants', []);
      allow create: if isAuthenticated() && 
                       request.resource.data.get('participants', []) is list &&
                       request.auth.uid in request.resource.data.get('participants', []);

      match /messages/{messageId} {
        allow read: if isAuthenticated() && 
                       request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.get('participants', []);
        allow create: if isAuthenticated() && 
                         request.auth.uid == request.resource.data.senderId &&
                         request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.get('participants', []);
      }
    }

    // COLLECTION GROUP: LIKES
    match /{path=**}/likes/{userId} {
      allow read: if true;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // SOCIAL ACTIVITIES:
    match /activities/{activityId} {
      allow read: if resource.data.get('isPublic', false) == true || isAuthenticated();
      allow create: if isAuthenticated() && 
                    request.resource.data.get('actorId', '') == request.auth.uid;
      allow update, delete: if isAuthenticated() && 
                            resource.data.get('actorId', '') == request.auth.uid;
    }
  }
}
